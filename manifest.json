{
  "manifest_version": 3,
  "name": "Web GIF Controller",
  "version": "1.0",
  "description": "A Chrome extension that replaces GIF images with a custom HTML5 canvas player featuring playback controls.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/lib/react-bundle.min.js", "src/lib/libgif.js", "src/content/contentScript.js"],
      "run_at": "document_end",
      "exclude_matches": [
        "*://mail.google.com/*",
        "*://gmail.com/*",
        "*://accounts.google.com/*",
        "*://drive.google.com/*",
        "*://docs.google.com/*",
        "*://sheets.google.com/*",
        "*://slides.google.com/*",
        "*://youtube.com/*",
        "*://twitter.com/*",
        "*://x.com/*",
        "*://facebook.com/*",
        "*://instagram.com/*",
        "*://linkedin.com/*",
        "*://leetcode.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/controls.html", 
        "src/ui/controls.css",
        "src/lib/react-bundle.min.js",
        "src/lib/libgif.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}